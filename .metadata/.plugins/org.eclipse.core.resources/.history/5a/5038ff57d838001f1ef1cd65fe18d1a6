package test1;

/*
 * 날짜 : 2024/07/03
 * 이름 : 김소희
 * 내용 : 자바 기본 입출력 연습문제
 */
public class Test02 {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int		year;
		int		birth;
		String	name;
		
		System.out.print("올해 년도 입력 : 2021");
		year = sc.nextInt();
				
		System.out.print("태어난 년도 입력 : 2001");
		birth = sc.nextInt();
				
		System.out.print("이름 입력 : 홍길동");
		name = sc.nextInt();
		
		int age = year - birth;
				
		System.out.printf("%s님 안녕하세요. \n당신은 올해 만 %세 입니다.", name, age); 
		
		sc.close();
	}

}
